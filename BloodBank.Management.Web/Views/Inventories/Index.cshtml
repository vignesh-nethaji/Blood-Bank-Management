@model IEnumerable<BloodBank.Management.Models.ViewModel.InventoryList>

@{
    ViewBag.Title = "Index";
}


<div class="app-content">
    <div class="root-description">
        <span>Home</span> / <span>Inventories</span>
    </div>

    <div class="blood-unity-box-card">
        <div class="blood-unity-box-card-header">
            <div class="row">
                <div class="col-sm-6">
                    <div class="blood-unity-box-card-title">
                        <span class="blood-unity-box-card-header-icon">
                            <i class="fa fa-table blood-unity-box-card-header-icon" aria-hidden="true"></i>
                        </span>
                        <b>Inventories</b>
                    </div>
                </div>
                <div class="col-sm-6">
                    <button class="add-btn">
                        <span class="blood-unity-box-card-header-icon">
                            <i class="fa fa-user-plus blood-unity-box-card-header-icon" aria-hidden="true"></i>
                        </span>
                        @Html.ActionLink("Add Inventories", "Create")
                    </button>
                </div>
            </div>

        </div>
        <div class="blood-unity-box-card-content">

            <table class="table ">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Donor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpiryDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Donor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpiryDate)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.Status)*@
                            @if (item.Status)
                            {
                                <span class="badge badge-danger" style="background-color:black;">Not Available</span>
                            }
                            else
                            {
                                <span class="badge  badge-success" style="background-color:black;">Available</span>
                            }
                        </td>
                        <td>

                            <a href="@Url.Action("Edit", "Inventories", new {id = item.Id})" class="btn btn-primary edit-icon-btn">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Details", "Inventories", new {id = item.Id})" class="btn btn-primary view-icon-btn">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Inventories", new {id = item.Id})" class="btn btn-primary delete-icon-btn">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>

                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>

</div>

