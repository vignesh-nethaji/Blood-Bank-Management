@model IEnumerable<BloodBank.Management.Models.ViewModel.DonationList>

@{
    ViewBag.Title = "Index";
}


<div class="app-content">
    <div class="root-description">
        <span>Home</span> / <span>Donation</span>
    </div>

    <div class="blood-unity-box-card">
        <div class="blood-unity-box-card-header">
            <div class="row">
                <div class="col-sm-6">
                    <div class="blood-unity-box-card-title">
                        <span class="blood-unity-box-card-header-icon">
                            <i class="fa fa-table blood-unity-box-card-header-icon" aria-hidden="true"></i>
                        </span>
                        <b>Donation</b>
                    </div>
                </div>
                <div class="col-sm-6">
                    <button class="add-btn">
                        <span class="blood-unity-box-card-header-icon">
                            <i class="fa fa-user-plus blood-unity-box-card-header-icon" aria-hidden="true"></i>
                        </span>
                        @Html.ActionLink("Add Donation", "Create")
                    </button>
                </div>
            </div>

        </div>
        <div class="blood-unity-box-card-content">

            <table class="table ">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Donor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Recipient)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DonationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Donor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>

                            @*<a href="@Url.Action("Edit", "Donations", new {id = item.Id})" class="btn btn-primary edit-icon-btn">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>*@
                            <a href="@Url.Action("Details", "Donations", new {id = item.Id})" class="btn btn-primary view-icon-btn">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Donations", new {id = item.Id})" class="btn btn-primary delete-icon-btn">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>

                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>

</div>

