@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav nav-pills">
            <li class="nav-item"><a href="/" class="nav-link" aria-current="page">Home</a></li>
            <li class="nav-item"><a href="/BloodGroups" class="nav-link active" aria-current="page">Blood Group</a></li>
            <li class="nav-item"><a href="/Donors" class="nav-link">Donor</a></li>
            <li class="nav-item"><a href="/Recipients" class="nav-link">Recipients</a></li>
            <li class="nav-item"><a href="/Donations" class="nav-link">Donation</a></li>
            <li class="nav-item"><a href="/Inventories" class="nav-link">Inventory</a></li>
            <li class="nav-item"><a href="/Hospitals" class="nav-link">Hospital</a></li>
            <li class="nav-item">
                @Html.ActionLink("Hello " + User.Identity.GetUserName().Split('@')[0] + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log off</a></li>

        </ul>

    }
}
else
{
    <ul class="nav nav-pills">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
